<div class="container">
  <h3 class="mt-5">Access</h3>
  <form action="/user/login" method="post">
    <div class="form-floating mb-3">
      <input type="email" name="email" value="{{this.email}}" class="form-control" id="floatingInput" placeholder="name@example.com" />
      <label for="floatingInput">Email</label>
    </div>
    <div class="form-floating mb-3">
      <input name="password" value="{{this.password}}" type="password" class="form-control" id="floatingPassword" placeholder="Password" />
      <label for="floatingPassword">Password</label>
    </div>
    <div class="text-center">
      <button class="btn btn-primary btn-lg">Log In</button>
    </div>
  </form>
  <form action="/user/signup" method="post">
    <div class="text-center mt-3">
      <button class="btn btn-primary btn-lg">Sign Up</button>
    </div>
  </form>
  <div class="text-center mt-3">
    {{#if this.errMessage}}
      <div class="alert alert-danger" role="alert">
        <p>{{this.errMessage}}</p>
      </div>
    {{/if}}
  </div>
</div>